<html>
<head>
  <title>SSH Key Management</title>
  <script type="text/javascript" src="/assets/jquery-1.10.2.min.js"></script>
  <link rel="stylesheet" type="text/css" href="/assets/bootstrap/css/bootstrap.min.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script type="text/javascript" src="/assets/bootstrap/js/bootstrap.min.js"></script>
  <style type="text/css">

  </style>
</head>
<body>

<nav class="navbar navbar-default" role="navigation">
  <!-- Brand and toggle get grouped for better mobile display -->
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <a class="navbar-brand" href="/">Blacksmith</a>
  </div>

  <!-- Collect the nav links, forms, and other content for toggling -->
  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    <ul class="nav navbar-nav">
      <li><a href="/keys">My Keys</a></li>
      <li><a href="/ssh-config">SSH Config</a></li>
      <li><a href="/authorized-keys">Authorized Keys</a></li>
    </ul>

    <ul class="nav navbar-nav navbar-right">
      <% if session[:username] %>
        <li><p class="navbar-text">Signed in as <%= session[:username] %></p></li>
        <li><a href="/logout">Sign Out</a></li>
      <% else %>
        <li><a href="/auth/github">Sign In</a></li>
      <% end %>
    </ul>
  </div><!-- /.navbar-collapse -->
</nav>

<div class="container">

  <% if flash[:notice] %>
    <div class="flash"><%= flash[:notice] %></div>
  <% end %>

  <%= yield %>

</div>

</body>
</html>